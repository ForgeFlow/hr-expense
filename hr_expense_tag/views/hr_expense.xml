<odoo>

    <record model="ir.ui.view" id="hr_expense_view_form">
        <field name="name">hr.expense.form (in hr_expense_tag)</field>
        <field name="model">hr.expense</field>
        <field name="inherit_id" ref="hr_expense.hr_expense_view_form" />
        <field name="arch" type="xml">
        <xpath expr="//field[@name='amount_residual']" position="after">
            <field
                    name="tag_ids"
                    widget="many2many_tags"
                    options="{'color_field': 'color'}"
                    placeholder="Tags..."
                />
         </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="view_my_expenses_tree">
        <field name="name">hr.expense.tree (in hr_expense_tag)</field>
        <field name="model">hr.expense</field>
        <field name="inherit_id" ref="hr_expense.view_my_expenses_tree" />
        <field name="arch" type="xml">
        <xpath expr="//field[@name='state']" position="after">
            <field
                    name="tag_ids"
                    widget="many2many_tags"
                    options="{'color_field': 'color'}"
                    placeholder="Tags..."
                />
         </xpath>
        </field>
    </record>

    <record id="hr_expense_tag_view_tree" model="ir.ui.view">
        <field name="name">hr.expense.tag.view.tree</field>
        <field name="model">hr.expense.tag</field>
        <field name="arch" type="xml">
            <tree string="Tags" editable="bottom">
                <field name="name" />
                <field name="color" widget="color_picker" />
            </tree>
        </field>
    </record>

    <record id="action_hr_expense_tag" model="ir.actions.act_window">
        <field name="name">Expense Tags</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.expense.tag</field>
        <field name="view_id" ref="hr_expense_tag_view_tree" />
        <field name="view_mode">tree</field>
    </record>

    <menuitem
        id="menu_hr_tag"
        name="Tags"
        parent="hr_expense.menu_hr_expense_configuration"
        sequence="15"
    />
    <menuitem
        id="menu_hr_expense_tag"
        name="Expense Tags"
        parent="menu_hr_tag"
        sequence="15"
        action="action_hr_expense_tag"
    />
</odoo>
